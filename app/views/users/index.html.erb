<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Nombre</th>

      <% User.roles.values.map(&:text).each do |rol| %>
        <th><%= rol %></th>
      <% end %>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @users %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
