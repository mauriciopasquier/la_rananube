<%= form_with(model: user) do |f| %>
  <div class="form-group row">
    <div class="col-lg-4">
      <%= f.label :nombre, class: 'sr-only' %>
      <%= f.text_field :nombre, autofocus: true,
        placeholder: User.human_attribute_name(:nombre),
        required: true, class: 'form-control form-control' %>
    </div>

    <%= mensaje_de_error user, :nombre %>
  </div>

  <div class="form-group row">
    <div class="col-lg-4">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email,
        placeholder: User.human_attribute_name(:email),
        required: true, class: 'form-control form-control' %>
    </div>

    <%= mensaje_de_error user, :email %>
  </div>

  <%# No pedimos el password durante la ediciÃ³n. %>
  <% if user.new_record? %>
    <div class="form-group row">
      <div class="col-lg-4">
        <%= f.label :password, class: 'sr-only' %>
        <%= f.password_field :password,
          placeholder: User.human_attribute_name(:password),
          required: true, class: 'form-control form-control' %>
      </div>

      <%= mensaje_de_error user, :password %>
    </div>

    <div class="form-group row">
      <div class="col-lg-4">
        <%= f.label :password_confirmation, class: 'sr-only' %>
        <%= f.password_field :password_confirmation,
          placeholder: User.human_attribute_name(:password_confirmation),
          required: true, class: 'form-control form-control' %>
      </div>

      <%= mensaje_de_error user, :password_confirmation %>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-lg">
      <%= f.submit class: 'btn btn-outline-success' %>
    </div>
  </div>
<% end %>
