<%= render layout: 'layouts/full_screen' do %>
  <h1><%= t('devise.password.change_your_password') %></h1>

  <%= form_with(model: resource, url: password_path(resource_name),
    html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, t('devise.passwords.new.new_password'), class: 'sr-only' %>
      <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: 'new-password',
        placeholder: resource.class.human_attribute_name(:password),
        class: 'form-control form-control-lg' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, t('devise.passwords.new.confirm_new_password'), class: 'sr-only' %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password',
        placeholder: resource.class.human_attribute_name(:password_confirmation),
        class: 'form-control form-control-lg' %>
    </div>

    <div class="form-group">
      <%= f.submit t('devise.passwords.new.change_my_password'), class: 'form-control btn btn-outline-success' %>
    </div>
  <% end %>
<% end %>
