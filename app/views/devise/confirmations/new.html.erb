<%= render layout: 'layouts/full_screen' do %>
  <h1><%= t('.resend_confirmation_instructions') %></h1>

  <%= form_for(resource, as: resource_name,
    url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email',
        placeholder: resource.class.human_attribute_name(:email),
        value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
        class: 'form-control form-control-lg' %>
    </div>

    <div class="form-group">
      <%= f.submit t('.resend_confirmation_instructions'),
        class: 'form-control btn btn-outline-success' %>
    </div>
  <% end %>
<% end %>
